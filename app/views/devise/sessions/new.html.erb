<div class="container container-center">
  <div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 form-content">
      <h2>Connexion</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
        <div class="field">
          <%= f.label :email %><br/>
          <%= f.email_field :email, class:"input-form",:placeholder => "monmail@mail.com" %>
        </div>

        <div class="field">
          <%= f.label :password %><br/>
          <%= f.password_field :password, autocomplete: "off", class:"input-form",:placeholder => "Mot de passe" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Se souvenir de moi" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Connexion", class:"btn btn_green"%>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
